---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import { cn } from "@/lib/utils";
interface Props {
  title: string;
  description: string;
  favicon?: string;
  class?: string;
}

const { title, favicon, class: className, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} favicon={favicon} description={description} />
    <slot name="head" />
  </head>
  <body class={cn("flex flex-col", className)}>
    <slot />
  </body>
</html>
