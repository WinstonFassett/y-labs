---
import { cn } from "@/lib/utils";

const { title, pubDate, url, description, image, class: className } = Astro.props;
---

<div
  class={cn("card card-bordered bg-base-100 shadow-xl hover:bg-base-200 transition duration-300 ease-in-out transform hover:-translate-y-1", className)}
>
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>
      {description}
    </p>
  </div>
  {
    !!image && (
      <figure>
        <img src={image.url ?? image} alt={title} />
      </figure>
    )
  }
  <slot />
</div>
