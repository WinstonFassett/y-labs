---
import { Navbar, NavbarBrand, NavbarContent } from "@/components/ui/navbar";
import { SITE_TITLE } from "@/consts";
import ThemeSwitch from "@/lib/astro-tailwind-themes/ThemeSwitch.svelte";
import HomeButton from "./HomeButton.astro";
---

<Navbar className="border-none bg-transparent backdrop-blur-none backdrop-saturate-100">
  <NavbarContent>
    <NavbarBrand>
      <HomeButton />          
    </NavbarBrand>
  </NavbarContent>
  <NavbarContent className="flex-1">
    <h2>
      <a href="/y-labs/index.html">
        {SITE_TITLE}
      </a>
    </h2>
  </NavbarContent>
  <NavbarContent>
    <ThemeSwitch client:load />
  </NavbarContent>
</Navbar>
